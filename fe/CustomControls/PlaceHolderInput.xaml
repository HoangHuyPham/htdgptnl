<UserControl x:Class="fe.CustomControls.PlaceHolderInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:fe.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <Grid>
        <TextBlock FontFamily="{StaticResource Roboto}" x:Name="PlaceHolderInp" Margin="10 0" Text="{Binding PlaceHolder, RelativeSource={RelativeSource AncestorType=UserControl}}" IsHitTestVisible="False" FontWeight="SemiBold" Background="Transparent" Foreground="Gray"  FontSize="25" TextAlignment="Left" VerticalAlignment="Center"/>
        <TextBox FontFamily="{StaticResource Roboto}" Padding="10 0" Text="{Binding TextContent, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"  FontSize="25" TextAlignment="Left" VerticalContentAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="-1" GotFocus="OnFocus" LostFocus="OnLostFocus"/>
    </Grid>
</UserControl>
